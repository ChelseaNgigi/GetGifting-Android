<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/make_donation_background"
    tools:context=".DonationDescription">


    <RelativeLayout
        android:layout_width="358dp"
        android:layout_height="622dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/donation_description_image"
            android:layout_width="341dp"
            android:layout_height="193dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/add_donation_image"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="#CEABABAC" />

        <TextView
            android:id="@+id/donationDescriptionFoodType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donation_description_image"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:padding="20dp"
            android:background="@drawable/edit_text_border"
            android:textColor="@android:color/black" />



        <TextView
            android:id="@+id/donationDescriptionFoodQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/donationDescriptionFoodType"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:background="@drawable/edit_text_border"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/descriptionLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donationDescriptionFoodQuantity"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edit_text_border"
            android:padding="20dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/donationDescription"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_below="@+id/descriptionLocation"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_border"
            android:padding="20dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/request_donation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donationDescription"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/buttonColor"
            android:padding="17dp"
            android:text="@string/request_donation"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>